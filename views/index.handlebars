<div class="container">
<br>
  <h1>eat-healthy-food!</h1>
<br>
  <div class="img">
    <img src="/img/vegan.png">
  </div>
  <div class="container">
    <div class="row">
      <div class="col">
        <form class="input-form">
          <div class="form-group">
            <input class="form-control" type="text" id="foodName" name="name"
              placeholder="What organic food would you like to eat?">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col">
        <h2>Your food:</h2>
        <ol>
          {{#each food}}
          {{#unless devoured }}
          {{> templates/devour-btn devoured=false }}
          {{/unless}}
          {{/each}}
        </ol>
      </div>
      <div class="col">
        <h2>Food you have vanquished:</h2>
        <ol>
          {{#each food}}
          {{#if devoured}}
          {{> templates/devour-btn devoured=true}}
          {{/if}}
          {{/each}}
        </ol>
      </div>
    </div>
  </div>


</div>